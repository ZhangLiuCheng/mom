/* pages/searchHistory/searchHistory.wxss */

.search-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
  z-index: 2;
}

.search-content-open {
  height: 100%;
}

.search-keyword {
  display: flex;
  width: 100%;
  height: 80rpx;
  align-items: center;
  background-color: #fff;
  /* border-bottom: 2rpx solid #d0d0d0; */
  z-index: 2;
}

.search-keyword-icon-txt {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #ededed;
  border-radius: 10rpx;
}

.search-keyword-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.search-keyword-txt {
  flex: 1;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-keyword-btn {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #555;
}

.search-keyword-btn-enable {
  color: #da7c0c;
}

.content {
  height: 100%;
  /* background: rgba(0, 0, 0, 0.2); */
  background: #fff;
  display: none;
}

.content_open {
  display: flex;
  flex-direction: column;
}

.option {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  background-color: #fefefe;
}

.option-info-txt {
  font-size: 28rpx;
  color: #000000;
  text-align: center;
  margin-left: 20rpx;
}


.option-search-history {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.option-search-hot-layout {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.option-item-hot-txt {
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 28rpx;
  color: #da7c0c;
  background-color: #eee;
  align-content: center;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  text-align: center;
}

