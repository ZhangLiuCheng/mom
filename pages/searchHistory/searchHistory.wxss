.option-search-history-layout {
  display: flex;
  flex-direction: column;
}

.option-item-history-txt-delete {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ececec;
}

.option-item-history-txt {
  flex: 1;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #707070;
}

.option-item-history-delete {
  width: 45rpx;
  height: 45rpx;
}

