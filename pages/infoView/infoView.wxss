/* pages/infoView/infoView.wxss */

.info {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: absolute;
}

.info-layout {
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

/*  数据加载中  */

.loading-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}

.loading-layout-image {
  width: 128rpx;
  height: 128rpx;
  animation: a 1s steps(12) infinite;
}

@keyframes a {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(1turn);
    transform: rotate(1turn);
  }
}

.loading-layout-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #da7c0c;
}

/*  数据为空  */

.empty-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40%;
}

.empty-layout-image {
  width: 128rpx;
  height: 88rpx;
}

.empty-layout-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #da7c0c;
}


/*  数据获取失败  */

.error-layout {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40%;
  padding-bottom: 40%;
}

.error-layout-image {
  width: 128rpx;
  height: 88rpx;
}

.error-layout-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #da7c0c;
}
